{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "exclude": [ "node_modules", "dist" ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler", // 若需Node直接执行，改为"NodeNext"
    "types": [ "node" ],
    // 严格类型检查（推荐）
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // 支持JSON导入（按需）
    "resolveJsonModule": true
  }
}